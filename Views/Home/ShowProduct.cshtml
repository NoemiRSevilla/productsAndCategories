    @using productsAndCategories.Models
    @model List<Category>
    
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-dark">
    <h1 class="white mr-auto text col"></h1>
</nav>

<div class="container moveit">
    <div class="container box">
        <a href="/categories/form" class="btn btn-info">Add Category</a>
        <a href="/products/form" class="btn btn-info">Add Product</a>
    </div>
        <div class="row">
            </ul>
        </div>
        <h6>Categories</h6>
        @foreach(var c in ViewBag.prod.CategorizedBy)
        {
            <h3>@c.Category.Name</h3>
        }
        <h6>Add Product: </h6>
        <form action="/products/@ViewBag.prod.ProductId/addcategory" method="post">
        <select name="CategoryId">
        @foreach(var p in Model)
        {
            <option value="@p.CategoryId">@p.Name</option>
        }
        <input type="hidden" name="ProductId" value="@ViewBag.prod.ProductId">
        <input type="submit" value="Add" class="btn btn-info">
        </form> 
    </div>
</div>
</body>